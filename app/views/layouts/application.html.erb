<!DOCTYPE html>
<html>
  <head>
    <title>Testguru</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <p class="nav user"><%= link_to 'TestGuru Project', root_path %></p>

  <% if logged_in?%>
    <p class="nav user">Welcome, <b><%= current_user.name %></b> Guru</p>
    <p class="nav user"><%= link_to 'Log out', sessions_path, method: :delete %></p>
  <% else %>
    <p class="nav user"><%= link_to 'Login', login_path %></p>
    <p class="nav user"><%= link_to 'Signup', signup_path %></p>
  <% end %>
    <%= yield %>
  </body>

<%= render 'shared/footer'%>
</html>