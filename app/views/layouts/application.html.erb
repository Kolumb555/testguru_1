  </head>

  <body>
    <p class="nav user"><%= link_to 'TestGuru Project', root_path %></p>

    <%= render 'shared/nav' %>

    <div class="container">
      <%= render 'shared/flash' %>
      <%= yield %>
    </div>
  </body>

<%= render 'shared/footer'%>
</html>