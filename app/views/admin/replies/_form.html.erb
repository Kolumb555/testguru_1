<%= form_with model: [@question, @reply], local: true do |form| %>
<%= render 'shared/errors', resource: @reply %>

<p>
  <%= form.label :body %><br>
  <%= form.text_area :body, id: :reply_body, rows: 7, cols: 60 %>
</p>

<p>
  <%= form.label :correct %><br>
  <%= form.check_box :correct, id: :reply_correct %>
</p>

<%= form.submit %>
<% end %>
